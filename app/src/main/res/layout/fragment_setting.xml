<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_da_top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="点位采集"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/bg_da_search"
                android:hint="点位名称、IP、杆件编码查询"
                android:paddingHorizontal="14dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#C8C8C8"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_ss"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingStart="7dp"
                android:paddingRight="7dp"
                android:src="@mipmap/ss2" />

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingStart="7dp"
                android:paddingRight="7dp"
                android:src="@mipmap/plus" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_select"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/tv_select1_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="全  部"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select1_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="已通过"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select1_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="审批中"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select1_type4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="已驳回"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select1_type5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="已撤销"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_select2_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="全  部"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select2_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="信息采集"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select2_type3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_shi"
                    android:gravity="center"
                    android:text="采集信息修改"
                    android:textColor="@drawable/text_da_shi"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/tv_select_year"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_select_pcs"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:gravity="center_vertical"
                    android:hint="请选择开始日期"
                    android:paddingHorizontal="11dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_select_month"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_da_select_pcs"
                    android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                    android:gravity="center_vertical"
                    android:hint="请选择结束日期"
                    android:paddingHorizontal="11dp"
                    android:singleLine="true"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_qk"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:padding="3dp"
                    android:src="@mipmap/trash" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_arrow_show" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDF1FC">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </RelativeLayout>

</LinearLayout>