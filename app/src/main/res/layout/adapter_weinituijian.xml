<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_33">
            <ImageView
                android:layout_marginTop="@dimen/dp_4"
                android:src="@mipmap/tuij"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@mipmap/jingru"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="更多"
                android:textColor="#ffafafb8"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_img1"
                    android:layout_gravity="center"
                    android:background="#BC655E"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="@dimen/dp_105"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_price1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="¥ 19.9"
                        android:textColor="#ffef211a"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/yjprice1"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥99.0"
                        android:textColor="#ff9e9d9d"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_img2"
                    android:layout_gravity="center"
                    android:background="#BC655E"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="@dimen/dp_105"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_price2"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="¥ 19.9"
                        android:textColor="#ffef211a"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/yjprice2"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥99.0"
                        android:textColor="#ff9e9d9d"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_img3"
                    android:layout_gravity="center"
                    android:background="#BC655E"
                    android:layout_width="@dimen/dp_105"
                    android:layout_height="@dimen/dp_105"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_price3"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="¥ 19.9"
                        android:textColor="#ffef211a"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/yjprice3"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥99.0"
                        android:textColor="#ff9e9d9d"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>