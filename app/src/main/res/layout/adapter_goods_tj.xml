<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_123"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:layout_gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:maxLines="2"
                    android:minHeight="@dimen/dp_45"
                    android:text="纯棉舒适透气丝光棉圆领短袖t恤女纯色上衣大纯棉舒适透气丝光棉圆领短袖t恤女纯色上衣大"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_16" />
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tv_by"
                        android:background="@drawable/bg_baoyou"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="极速包邮"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingRight="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_1"
                        android:paddingLeft="@dimen/dp_2"
                        android:textColor="#ffe32d20"
                        android:textSize="12sp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_th"
                        android:background="@drawable/bg_baoyou"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="极速包邮"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingRight="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_1"
                        android:paddingLeft="@dimen/dp_2"
                        android:textColor="#ffe32d20"
                        android:textSize="12sp" />


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="￥12.00"
                        android:textColor="#EF211A"
                        android:textSize="@dimen/sp_16" />
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_fan"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:text="返"
                            android:textColor="#ffffffff"
                            android:textSize="10sp"
                            android:background="@drawable/fan1"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_13"/>
                        <TextView
                            android:id="@+id/tv_fan"
                            android:paddingLeft="@dimen/dp_1"
                            android:paddingRight="@dimen/dp_1"
                            android:gravity="center"
                            android:background="@drawable/fan"
                            android:text="¥10.00"
                            android:textColor="#ffe32d20"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_13"/>
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_ls_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_5"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="零售价 ￥12.00"
                    android:textColor="#525050"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_pt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:layout_marginTop="@dimen/dp_6"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="已拼团23000件"
                    android:textColor="#9E9D9D"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_canyu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/bg_red_bg"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="@dimen/sp_9"
                android:paddingRight="@dimen/sp_9"
                android:singleLine="true"
                android:text="参与拼团"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="#E8E8E8" />


</LinearLayout>
